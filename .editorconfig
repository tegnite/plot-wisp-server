# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*] # Apply to all files
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts] # Apply specifically to TypeScript files
indent_size = 4
